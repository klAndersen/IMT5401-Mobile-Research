<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".StartUpActivity">

    <Button
        android:id="@+id/btnLocateTeacher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showLocateTeacher"
        android:text="@string/btnLocateTeacher"/>

    <Button
        android:id="@+id/btnAcceptTrackingRequest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="acceptTrackingRequest"
        android:layout_below="@id/btnAcceptTrackingRequest"
        android:text="@string/btnAcceptTrackingRequest"/>

    <Button
        android:id="@+id/btnDenyTrackingRequest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="denyTrackingRequest"
        android:layout_below="@id/btnAcceptTrackingRequest"
        android:text="@string/btnDenyTrackingRequest"/>

    <Button
        android:id="@+id/btnRegisterAccessPoints"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showRegisterAccessPoints"
        android:layout_below="@id/btnDenyTrackingRequest"
        android:text="@string/btnRegisterAccessPoints"/>

    <Button
        android:id="@+id/btnShowLog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showApplicationLog"
        android:layout_below="@id/btnRegisterAccessPoints"
        android:text="@string/activity_display_log"/>

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="showSettings"
        android:layout_below="@id/btnShowLog"
        android:text="@string/activity_settings"/>

</RelativeLayout>
